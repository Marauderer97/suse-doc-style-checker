<?xml version="1.0" encoding="UTF-8"?>
<terminology ignoredwords="([b-z0-9].*)" useonepattern="no">

<!-- Try not to do too much with u... since it is spoken "yu" in many
     words, it is a little confusing. -->

  <term>
    <accept>
      <proposal>a</proposal>
    </accept>
    <patterngroup>
      <pattern>an</pattern>
      <contextpattern>([0-79]|[bcdghj-np-tvwyz][aeiou]|f([eiou]|a(?!q))|xy|[bcdfgkpt]r|st[aeiuo]|us|uni[ovt])[^\-]+</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <proposal>an</proposal>
    </accept>
    <patterngroup>
      <pattern>a(?!.)</pattern>
      <!-- Keeping the words "one"/"once" out like this is not very clever. -->
      <contextpattern>(8|[aei]|o[a-mo-z]|on(?![ce])|u[bfgh]|un[a-hj-z]|[hlmnrx][bcdfghjklmnpqrtvwxz]|f[bcdfgjkmnpqtvwxz0-9]|s[bdfgjrxz0-9]|x[a-dfghj-np-tvwxz0-9]|unin)[^\-\.]+|ha</contextpattern>
      <contextpattern look="before" match="negative" location="2">q.?</contextpattern>
      <contextpattern match="negative" mode="fuzzy" location="2">[bc].?</contextpattern>
      <contextpattern match="negative">and|or|with|but</contextpattern>
    </patterngroup>
  </term>

</terminology>