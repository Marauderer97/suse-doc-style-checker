<terminology useonepattern="no">

  <term>
    <accept>
      <word>adapt</word>
    </accept>
    <patterngroup>
      <pattern1>ad[eo]pt(ed|s|ing)?</pattern1>
      <contextpattern look="before">(always|(automatical|easi|usual|general)ly)</contextpattern>
    </patterngroup>
    <patterngroup>
      <pattern1>ad[eo]pt(ed|s|ing)?</pattern1>
      <contextpattern match="negative">by</contextpattern>
      <contextpattern mode="fuzzy" where="4">(your|their)</contextpattern>
    </patterngroup>
    <patterngroup>
      <pattern1>ad[eo]pt(ed|s|ing)?</pattern1>
      <contextpattern mode="fuzzy" where="2">to</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>adaptation</word>
    </accept>
    <patterngroup>
      <pattern1>adoptations?</pattern1>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>adept</word>
    </accept>
    <patterngroup>
      <pattern1>adapt</pattern1>
      <contextpattern look="before">(be|is|are|were|was)</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>adopt</word>
    </accept>
    <patterngroup>
      <pattern1>adapt(ed|s|ing)?</pattern1>
      <contextpattern look="before">widely</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>a long</word>
    </accept>
    <patterngroup>
      <pattern1>along</pattern1>
      <contextpattern look="before">for</contextpattern>
      <contextpattern>time</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>although</word>
    </accept>
    <patterngroup>
      <pattern1>all</pattern1>
      <pattern2>though</pattern2>
      <contextpattern look="before">(in|of|not|at)</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>although</word>
    </accept>
    <patterngroup>
      <pattern1>aloud</pattern1>
      <pattern2>to</pattern2>
      <contextpattern look="before">(is|are|were|was|be|been)</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>and</word>
    </accept>
    <!-- "an more" could also be "any more"/"anymore"... -->
    <patterngroup>
      <pattern1>an</pattern1>
      <contextpattern>(more|most|some|many|few|th(en|is|at|[eo]se|ere))</contextpattern>
    </patterngroup>
    <patterngroup>
      <pattern1>ad(?!-)</pattern1>
      <contextpattern look="before" match="negative">(an?|the|my|your|his|her|their|our)</contextpattern>
      <contextpattern match="negative">hoc</contextpattern>
    </patterngroup>
    <patterngroup>
      <pattern1>in</pattern1>
      <contextpattern look="before">back</contextpattern>
      <contextpattern>fou?rth</contextpattern>
    </patterngroup>
    <patterngroup>
      <pattern1>in</pattern1>
      <contextpattern look="before">one</contextpattern>
      <contextpattern mode="fuzzy" where="2">same</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>any</word>
    </accept>
    <patterngroup>
      <pattern1>ant</pattern1>
      <contextpattern look="before" mode="fuzzy" where="5">(buil[dt](s|ing)?|java)</contextpattern>
      <contextpattern mode="fuzzy" where="5">(buil[dt](s|ing)?|java)</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>anymore</word>
    </accept>
    <patterngroup>
      <pattern1>any</pattern1>
      <pattern2>more</pattern2>
      <contextpattern match="negative">(of|than)</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>any more</word>
    </accept>
    <patterngroup>
      <pattern1>anymore</pattern1>
      <contextpattern>(of|than)</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>as opposed to</word>
    </accept>
    <patterngroup>
      <pattern1>as</pattern1>
      <pattern2>oppose</pattern2>
      <pattern3>to</pattern3>
    </patterngroup>
    <patterngroup>
      <pattern1>as</pattern1>
      <pattern2>opposed</pattern2>
      <pattern3>too</pattern3>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>begin</word>
    </accept>
    <patterngroup>
      <pattern1>being</pattern1>
      <contextpattern case="keep" look="before">To</contextpattern>
      <contextpattern>with(?=,)</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>by</word>
    </accept>
    <patterngroup>
      <pattern1>bye</pattern1>
      <contextpattern>the</contextpattern>
      <contextpattern where="2">way</contextpattern>
    </patterngroup>
    <patterngroup>
      <pattern1>per</pattern1>
      <contextpattern>default</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>date</word>
    </accept>
    <patterngroup>
      <pattern1>data</pattern1>
      <contextpattern look="before">to</contextpattern>
      <contextpattern look="before" where="2">up</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>from</word>
    </accept>
    <patterngroup>
      <pattern1>form</pattern1>
      <contextpattern look="before">apart</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>exists</word>
    </accept>
    <patterngroup>
      <pattern1>exits</pattern1>
      <contextpattern look="before">there</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>ensure</word>
      <context>making sure of something</context>
    </accept>
    <patterngroup>
      <pattern1>insure</pattern1>
      <contextpattern look="before">that</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>formerly</word>
    </accept>
    <patterngroup>
      <pattern1>formally</pattern1>
      <contextpattern>known</contextpattern>
      <contextpattern where="2">as</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>forth</word>
    </accept>
    <patterngroup>
      <pattern1>fourth</pattern1>
      <contextpattern look="before">and</contextpattern>
      <contextpattern look="before" where="2">back</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>for</word>
    </accept>
    <patterngroup>
      <pattern1>fro</pattern1>
      <contextpattern look="before" match="negative">(and|from)</contextpattern>
      <contextpattern look="before" where="2" match="negative">to</contextpattern>
    </patterngroup>
    <patterngroup>
      <pattern1 case="keep">Fro</pattern1>
    </patterngroup>
    <patterngroup>
      <pattern1>fro</pattern1>
      <contextpattern>an?</contextpattern>
      <contextpattern where="2">(while|week(end)?|month|year|hour|minute|second)</contextpattern>
    </patterngroup>
    <patterngroup>
      <pattern1>fro</pattern1>
      <contextpattern>some</contextpattern>
      <contextpattern where="2">time</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>from</word>
    </accept>
    <patterngroup>
      <pattern1>fro</pattern1>
      <contextpattern look="before">away</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>got</word>
    </accept>
    <patterngroup>
      <pattern1>go</pattern1>
      <contextpattern look="before">(\w+?'|ha)(ve|d)</contextpattern>
      <contextpattern>to</contextpattern>
      <contextpattern where="2">go</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>hardware</word>
    </accept>
    <patterngroup>
      <pattern1>hard</pattern1>
      <contextpattern look="before">(and|or)</contextpattern>
      <contextpattern look="before" where="2">software</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>hour</word>
    </accept>
    <patterngroup>
      <pattern1>our</pattern1>
      <contextpattern look="before">half</contextpattern>
      <contextpattern look="before" where="2">an?</contextpattern>
    </patterngroup>
    <patterngroup>
      <pattern1>our</pattern1>
      <contextpattern look="before">an?</contextpattern>
      <contextpattern look="before" where="2">half</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>if</word>
    </accept>
    <patterngroup>
      <pattern1>i(?![-,])</pattern1>
      <contextpattern>you</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>in other</word>
    </accept>
    <patterngroup>
      <pattern1 case="keep">Another</pattern1>
      <contextpattern>words(?=,)</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>itself</word>
    </accept>
    <patterngroup>
      <pattern1>it</pattern1>
      <pattern2>self</pattern2>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>know</word>
    </accept>
    <patterngroup>
      <pattern1>now</pattern1>
      <contextpattern look="before">(to|not)</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>known</word>
    </accept>
    <patterngroup>
      <pattern1>know</pattern1>
      <contextpattern>(issue|problem|bug)s?</contextpattern>
      <contextpattern look="before" where="2" mode="fuzzy" match="negative">(to|not|is|was|be(en)?|will|ha(s|d|ve)|(we|a)re|can|could|may|might|shall|should|you|he|she|it|they|we|suse|novell|attachmate)</contextpattern>
    </patterngroup>
    <patterngroup>
      <pattern1>know</pattern1>
      <contextpattern look="before">also</contextpattern>
      <contextpattern match="negative">(as|by|for)</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>lose</word>
    </accept>
    <patterngroup>
      <pattern1>loose(e[ds]|ing)</pattern1>
    </patterngroup>
    <patterngroup>
      <pattern1>loose</pattern1>
      <contextpattern look="before">(to|not|is|was|be(en)?|will|ha(s|d|ve)|(we|a)re|can|could|may|might|shall|should|i|you|he|she|it|they|we|suse|novell|attachmate)</contextpattern>
    </patterngroup>
  </term>

  <!-- Needs to be reworked to avoid false positives. -->
  <!-- <term>
    <accept>
      <word>may be</word>
    </accept>
    <patterngroup>
      <pattern1>maybe</pattern1>
      <contextpattern look="before">it</contextpattern>
    </patterngroup>
  </term> -->

  <term>
    <accept>
      <word>by</word>
    </accept>
    <patterngroup>
      <pattern1>with</pattern1>
      <contextpattern look="before">multipl(y(ing)?|ie[ds])</contextpattern>
    </patterngroup>
    <patterngroup>
      <pattern1>notice</pattern1>
      <contextpattern>that</contextpattern>
      <contextpattern look="before" where="2" mode="fuzzy" match="negative">(will|\w+'ll|can|could|may|might|shall|should)</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>note</word>
    </accept>
    <patterngroup>
      <pattern1>not(ice)?</pattern1>
      <contextpattern look="before">please</contextpattern>
    </patterngroup>
    <patterngroup>
      <pattern1>notice</pattern1>
      <contextpattern>that</contextpattern>
      <contextpattern look="before" where="2" mode="fuzzy" match="negative">(will|\w+'ll|can|could|may|might|shall|should)</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>now</word>
    </accept>
    <patterngroup>
      <pattern1>know</pattern1>
      <contextpattern look="before">(right|by|of|for|(un)?till?|it|this|has|have|is|are)</contextpattern>
      <contextpattern match="negative">(issue|problem|bug)s?</contextpattern>
    </patterngroup>
    <patterngroup>
      <pattern1>know</pattern1>
      <contextpattern>(they|you|attachmate|suse|novell|k?nows)</contextpattern>
    </patterngroup>
    <patterngroup>
      <pattern1>know</pattern1>
      <contextpattern look="before">from</contextpattern>
      <contextpattern>on</contextpattern>
    </patterngroup>
    <patterngroup>
      <pattern1>know</pattern1>
      <contextpattern>and</contextpattern>
      <contextpattern where="2">then</contextpattern>
    </patterngroup>
    <patterngroup>
      <pattern1>know</pattern1>
      <contextpattern look="before">(and|but|by|even|from|so)</contextpattern>
      <contextpattern look="before" where="2" match="negative">not</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>one</word>
    </accept>
    <patterngroup>
      <pattern1>on</pattern1>
      <contextpattern>of</contextpattern>
      <contextpattern where="2">the</contextpattern>
      <contextpattern where="3">(more|most|less|least|best|worst)</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>parentheses</word>
    </accept>
    <patterngroup>
      <pattern1>parenthesis</pattern1>
      <contextpattern look="before">in</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>peek</word>
    </accept>
    <patterngroup>
      <pattern1>peak</pattern1>
      <contextpattern look="before">sneak</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>remember</word>
    </accept>
    <patterngroup>
      <pattern1>remind</pattern1>
      <contextpattern look="before">to</contextpattern>
      <contextpattern look="before" where="2">eas(y|ier|iest)</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>same</word>
    </accept>
    <patterngroup>
      <pattern1>some</pattern1>
      <contextpattern case="keep" look="before">[Tt]he(?![,\)\]])</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>se</word>
    </accept>
    <patterngroup>
      <pattern1>say</pattern1>
      <contextpattern look="before">per</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>software</word>
    </accept>
    <patterngroup>
      <pattern1>soft</pattern1>
      <contextpattern>(and|or)</contextpattern>
      <contextpattern where="2">hardware</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>somewhat</word>
    </accept>
    <patterngroup>
      <pattern1>some</pattern1>
      <pattern2>what</pattern2>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>supposed</word>
    </accept>
    <patterngroup>
      <pattern1>suppose</pattern1>
      <contextpattern>to</contextpattern>
      <contextpattern where="2">be</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>than</word>
    </accept>
    <patterngroup>
      <pattern1>then</pattern1>
      <contextpattern look="before">(less|more|better|worse|larger|smaller|(o|ra)ther)(?![,\)\]])</contextpattern>
      <!-- Needs check that this is not the end of the sentence. -->
    </patterngroup>
    <patterngroup>
      <pattern1>then</pattern1>
      <contextpattern look="before" where="2">(less|more)(?![,\)\]])</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>to</word>
    </accept>
    <patterngroup>
      <pattern1>do</pattern1>
      <contextpattern look="before">(easy|simple|hard|difficult|low|high|best|worst|[-\w]+?[ia]ble|[-\w]+?ful|[-\w]+?like)(?![,\)\]])</contextpattern>
      <contextpattern look="before" where="3" mode="fuzzy" match="negative">(if|when|how|whom?|when|where|why)</contextpattern>
    </patterngroup>
    <patterngroup>
      <pattern1>t[ow]o(?![,\)\]])</pattern1>
      <contextpattern>(do|make|take|use|configure|add|remove|change|switch|install|uninstall|you|my|your|my|our|their)</contextpattern>
      <contextpattern look="before" match="negative">to</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>to the</word>
    </accept>
    <patterngroup>
      <pattern1>tot</pattern1>
      <pattern2>he</pattern2>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>to this</word>
    </accept>
    <patterngroup>
      <pattern1>tot</pattern1>
      <pattern2>his</pattern2>
    </patterngroup>
  </term>


  <term>
    <accept>
      <word>too</word>
    </accept>
    <patterngroup>
      <pattern1>two</pattern1>
      <contextpattern>(much|many|few|little)</contextpattern>
    </patterngroup>
    <patterngroup>
      <pattern1>to(?=\.)</pattern1>
      <contextpattern look="before">[-\w]+?(?=,)</contextpattern>
    </patterngroup>
    <patterngroup>
      <pattern1>tool</pattern1>
      <contextpattern>long</contextpattern>
      <contextpattern where="2" match="negative">ago</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>two</word>
    </accept>
    <patterngroup>
      <pattern1>too</pattern1>
      <contextpattern look="before">(only|just)(?![,])</contextpattern>
    </patterngroup>
    <patterngroup>
      <pattern1>too</pattern1>
      <contextpattern>(different|alternatives?|ways|kinds|modes|standards|cases)</contextpattern>
    </patterngroup>
    <patterngroup>
      <pattern1>too?</pattern1>
      <contextpattern look="before">the(?![,])</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>use</word>
    </accept>
    <patterngroup>
      <pattern1>use(?!,)</pattern1>
      <contextpattern look="before">to</contextpattern>
      <contextpattern look="before">(the|an?)</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>way</word>
    </accept>
    <patterngroup>
      <pattern1>was</pattern1>
      <contextpattern look="before">an?</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>whether</word>
    </accept>
    <patterngroup>
      <pattern1>wea?ther</pattern1>
      <contextpattern look="before">(ask|question)(ed|s|ing)?</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>world</word>
    </accept>
    <patterngroup>
      <pattern1>all</pattern1>
      <contextpattern>over</contextpattern>
      <contextpattern where="2">the</contextpattern>
      <contextpattern where="3">word</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>yet</word>
    </accept>
    <patterngroup>
      <!-- May need some fleshing out to avoid too many false positives.
      -->
      <pattern1>jet</pattern1>
      <contextpattern look="before" match="negative">(ink|private)</contextpattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <word>you</word>
    </accept>
    <patterngroup>
      <pattern1>your</pattern1>
      <contextpattern>(c|sh)ould</contextpattern>
    </patterngroup>
  </term>

</terminology>
